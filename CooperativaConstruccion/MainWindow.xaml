<Window x:Class="CooperativaConstruccion.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CooperativaConstruccion"
        mc:Ignorable="d"
        Title="Cooperativa de Construcción" WindowState="Maximized" Height="649" Width="831" ResizeMode="CanMinimize">
    <Grid Margin="0,0,-8,-21">
        <Label Content="Proyectos" HorizontalAlignment="Left" Margin="9,23,0,0" VerticalAlignment="Top" RenderTransformOrigin="1.871,0.615"/>
        <ListView Name="grillaProyectos" Height="385" Margin="140,66,7,0" VerticalAlignment="Top" HorizontalAlignment="Center" Width="684" Loaded="ProjectsGrid_Loaded" MouseDoubleClick="grillaProyectos_MouseDoubleClick">
            <ListView.View>
                <GridView>
                    <GridViewColumn Width="{Binding Path=ActualWidth}" Header="Proyecto" DisplayMemberBinding="{Binding Path=Id}"/>
                    <GridViewColumn Width="{Binding Path=ActualWidth}" Header="Nombre" DisplayMemberBinding="{Binding Path=Name}"/>
                    <GridViewColumn Width="{Binding Path=ActualWidth}" Header="Monto Inicial" DisplayMemberBinding="{Binding Path=StartBudget}"/>
                    <GridViewColumn Width="{Binding Path=ActualWidth}" Header="Monto Actual" DisplayMemberBinding="{Binding Path=CurrentBudget}"/>
                    <GridViewColumn Width="{Binding Path=ActualWidth}" Header="Fecha Creación" DisplayMemberBinding="{Binding Path=StartDate}"/>
                    <GridViewColumn Width="{Binding Path=ActualWidth}" Header="Fecha Fin" DisplayMemberBinding="{Binding Path=EndDate}"/>
                    <GridViewColumn Width="{Binding Path=ActualWidth}" Header="Estado" DisplayMemberBinding="{Binding Path=Status}"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button Name="button_OpenFormNewProject" Content="Crear Proyecto" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="106" Click="Button_OpenFormNewProject"/>
        <Button Name="button_CloseMainWindow" Content="Cerrar" HorizontalAlignment="Left" Margin="9,161,0,0" VerticalAlignment="Top" Width="107" Click="Close"/>
        <Button Name="button_EditProject" Content="Modificar Proyecto" HorizontalAlignment="Left" Margin="10,111,0,0" VerticalAlignment="Top" Width="106" Visibility="Hidden" Click="button_EditProject_Click"/>
        <Button Name="button_DeleteProject" Content="Eliminar Proyecto" HorizontalAlignment="Left" Margin="9,136,0,0" VerticalAlignment="Top" Width="107" Visibility="Hidden" Click="button_DeleteProject_Click"/>
    </Grid>
</Window>
