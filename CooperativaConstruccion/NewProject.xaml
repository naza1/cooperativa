<Window x:Class="CooperativaConstruccion.NewProject"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CooperativaConstruccion"
        mc:Ignorable="d"
        Title="NewProject" Height="442.276" Width="607.317">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="14,35,0,0" TextWrapping="Wrap" Text="Nombre de Proyecto: " VerticalAlignment="Top"/>
        <TextBox Name="textBox_ProjectName"  HorizontalAlignment="Left" Height="23" Margin="149,28,-99,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="242"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,76,0,0" TextWrapping="Wrap" Text="Monto Inicial: " VerticalAlignment="Top"/>
        <TextBox Name="textBox_ProjectStartBudjet" HorizontalAlignment="Left" Height="23" Margin="149,69,-99,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="242"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,115,0,0" TextWrapping="Wrap" Text="Fecha Inicio: " VerticalAlignment="Top"/>
        <DatePicker Name="datePicker_ProjectStartDate" HorizontalAlignment="Left" Margin="149,107,-99,0" VerticalAlignment="Top" Width="242"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,155,0,0" TextWrapping="Wrap" Text="Fecha Limite: " VerticalAlignment="Top"/>
        <DatePicker Name="datePicker_ProjectEndDate" HorizontalAlignment="Left" Margin="149,147,-99,0" VerticalAlignment="Top" Width="242"/>
        <TextBlock HorizontalAlignment="Left" Margin="14,191,0,0" TextWrapping="Wrap" Text="Estado: " VerticalAlignment="Top"/>
        <ComboBox Name="comboBox_ProjectStatus" HorizontalAlignment="Left" Margin="149,191,-99,0" VerticalAlignment="Top" Width="242">
            <ComboBoxItem Name="Activo" Content="Activo"/>
            <ComboBoxItem Name="Inactivo" Content="Inactivo" Selector.IsSelected="True"/>
            <ComboBoxItem Name="Finalizado" Content="Finalizado"/>
        </ComboBox>
        <Button Name="button_SaveProject" Content="Guardar" HorizontalAlignment="Left" Margin="316,230,0,0" VerticalAlignment="Top" Width="75" Click="CreateProject"/>
    </Grid>
</Window>
